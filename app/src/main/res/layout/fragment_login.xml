<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.krzdabrowski.airpurrr.viewmodel.LoginViewModel" />

        <variable
            name="isLoggingIn"
            type="boolean" />
    </data>

    <LinearLayout style="@style/Login.RootLayout">
        <ProgressBar
            style="@style/Login.ProgressBar"
            android:indeterminate="true"
            android:visibility="@{isLoggingIn ? View.VISIBLE : View.INVISIBLE}" />

        <LinearLayout style="@style/Login.RootLayout.Manual">
            <ImageView
                android:id="@+id/ic_logo"
                style="@style/Login.Credentials.Logo"
                android:contentDescription="@string/login_description_logo"
                android:src="@drawable/ic_logo" />

            <com.google.android.material.textfield.TextInputLayout style="@style/Login.Credentials.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_email"
                    style="@style/Login.Credentials.TextInputEditText"
                    android:hint="@string/login_hint_email"
                    android:inputType="textEmailAddress"
                    android:text="@={vm.email}"
                    app:errorValidationEmail="@{vm.isEmailError}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout style="@style/Login.Credentials.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_password"
                    style="@style/Login.Credentials.TextInputEditText"
                    android:hint="@string/login_hint_password"
                    android:inputType="textPassword"
                    android:text="@={vm.password}"
                    app:errorValidationPassword="@{vm.isPasswordError}" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                style="@style/Login.Credentials.Button"
                android:onClick="@{() -> vm.onLoginButtonClick()}"
                android:text="@string/login_btn_text" />
        </LinearLayout>
    </LinearLayout>
</layout>