<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="detectorData"
            type="com.krzdabrowski.airpurrr.main.current.detector.DetectorModel" />

        <variable
            name="apiData"
            type="com.krzdabrowski.airpurrr.main.current.api.ApiModel" />

        <variable
            name="flagDetectorApi"
            type="boolean" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        style="@style/Main.RootLayout">

        <LinearLayout style="@style/Main.RootLayout">
            <androidx.cardview.widget.CardView style="@style/Main.CardView">
                <LinearLayout style="@style/Main.DataContainer.LinearLayout">

                    <include
                        android:id="@+id/partial_main_data_pm25"
                        style="@style/Main.DataContainer.LinearView"
                        layout="@layout/partial_main_data"
                        app:data="@{flagDetectorApi ? apiData : detectorData}"
                        app:source="@{flagDetectorApi}"
                        app:type="@{@string/main_data_info_pm25}" />

                    <include
                        android:id="@+id/partial_main_data_pm10"
                        style="@style/Main.DataContainer.LinearView"
                        layout="@layout/partial_main_data"
                        app:data="@{flagDetectorApi ? apiData : detectorData}"
                        app:source="@{flagDetectorApi}"
                        app:type="@{@string/main_data_info_pm10}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>