<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Login screen -->
    <style name="Login" />

    <style name="Login.AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/color_login_primary</item>
        <item name="colorPrimaryDark">@color/color_login_dark</item>
        <item name="colorAccent">@color/color_login_accent</item>

        <item name="android:windowBackground">@color/color_login_primary</item>
        <item name="android:colorButtonNormal">@color/color_login_dark</item>
        <item name="android:textColorHint">@color/color_login_inactive</item>
    </style>

    <style name="Login.Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Login.RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Login.RootLayout.Manual">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingStart">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_xl</item>
        <item name="android:paddingEnd">@dimen/margin_medium</item>
    </style>

    <style name="Login.RootLayout.Credentials">
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/margin_xxxl</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Login.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Login.Credentials" />

    <style name="Login.Credentials.Logo">
        <item name="android:layout_width">@dimen/login_logo_size</item>
        <item name="android:layout_height">@dimen/login_logo_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
    </style>

    <style name="Login.Credentials.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="Login.Credentials.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Login.Credentials.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>


    <!-- Main screen -->
    <style name="Main" />

    <style name="Main.AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/color_main_primary</item>
        <item name="colorPrimaryDark">@color/color_main_dark</item>
        <item name="colorAccent">@color/color_main_accent</item>
    </style>

    <style name="Main.RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Main.Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Main.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Main.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="cardCornerRadius">@dimen/main_data_corner_radius</item>
    </style>

    <style name="Main.DataContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Main.DataContainer.LinearLayout">
        <item name="android:baselineAligned">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="Main.DataContainer.LinearView">
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Main.Data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Main.Data.Layout">
        <item name="android:elevation">@dimen/main_data_elevation</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="Main.Data.Percentage">
        <item name="android:textSize">@dimen/main_data_text_size_percentage</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="Main.Data.Ugm3">
        <item name="android:layout_marginBottom">@dimen/margin_tiny</item>
        <item name="android:textSize">@dimen/main_data_text_size_ugm3</item>
    </style>

    <style name="Main.Data.Info">
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:textSize">@dimen/main_data_text_size_info</item>
    </style>

    <style name="Main.Logo">
        <item name="android:layout_width">@dimen/main_data_logo_width</item>
        <item name="android:layout_height">@dimen/main_data_logo_height</item>
        <item name="android:layout_marginTop">@dimen/main_data_logo_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/main_data_logo_margin_end</item>
    </style>
</resources>
