<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: usunac landscape -->
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.trubul.airpurrr.MainActivity">

            <TextView
                android:id="@+id/auto_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="@string/UI_auto_mode"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/text_size_switch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/switch_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/auto_mode"
                app:layout_constraintEnd_toStartOf="@+id/guideline" />

            <TextView
                android:id="@+id/manual_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/UI_manual_mode"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/text_size_switch"
                app:layout_constraintBaseline_toBaselineOf="@+id/auto_mode"
                app:layout_constraintStart_toStartOf="@+id/guideline" />

            <Switch
                android:id="@+id/switch_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="24dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/auto_mode"
                app:layout_constraintEnd_toEndOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch_manual">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/PM25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:elevation="2dp"
                            android:text="@string/UI_pm25"
                            android:textSize="@dimen/text_size_pm_mode"
                            app:layout_constraintStart_toStartOf="@+id/PM25_data"
                            app:layout_constraintTop_toTopOf="@+id/PM25_data" />

                        <TextView
                            android:id="@+id/PM25_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:elevation="2dp"
                            android:text="@string/UI_indoors"
                            android:textSize="@dimen/text_size_pm_mode"
                            app:layout_constraintBaseline_toBaselineOf="@+id/PM25"
                            app:layout_constraintEnd_toEndOf="@+id/PM25_data" />

                        <TextView
                            android:id="@+id/PM25_data"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/color_default"
                            android:elevation="1dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="@dimen/text_size_pm_data"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="40%" />

                        <TextView
                            android:id="@+id/PM25_data_ugm3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:elevation="2dp"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_pm_data_ugm3"
                            app:layout_constraintBottom_toBottomOf="@+id/PM25_data"
                            app:layout_constraintEnd_toEndOf="@+id/PM25_data"
                            app:layout_constraintStart_toStartOf="@+id/PM25_data"
                            tools:text="(10.0)" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/PM10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:elevation="2dp"
                            android:text="@string/UI_pm10"
                            android:textSize="@dimen/text_size_pm_mode"
                            app:layout_constraintStart_toStartOf="@+id/PM10_data"
                            app:layout_constraintTop_toTopOf="@+id/PM10_data" />

                        <TextView
                            android:id="@+id/PM10_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:elevation="2dp"
                            android:text="@string/UI_indoors"
                            android:textSize="@dimen/text_size_pm_mode"
                            app:layout_constraintBaseline_toBaselineOf="@+id/PM10"
                            app:layout_constraintEnd_toEndOf="@+id/PM10_data" />

                        <TextView
                            android:id="@+id/PM10_data"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/color_default"
                            android:elevation="1dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="@dimen/text_size_pm_data"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="30%" />

                        <TextView
                            android:id="@+id/PM10_data_ugm3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:elevation="2dp"
                            android:textAlignment="center"
                            android:textSize="@dimen/text_size_pm_data_ugm3"
                            app:layout_constraintBottom_toBottomOf="@+id/PM10_data"
                            app:layout_constraintEnd_toEndOf="@+id/PM10_data"
                            app:layout_constraintStart_toStartOf="@+id/PM10_data"
                            tools:text="(15.0)" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>