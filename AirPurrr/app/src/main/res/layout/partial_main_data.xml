<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        tools:background="@drawable/color_green">

        <TextView
            android:id="@+id/data_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/main_data_info_pm25"
            android:textSize="@dimen/main_text_size_data_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/data_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/main_data_info_indoors"
            android:textSize="@dimen/main_text_size_data_info"
            app:layout_constraintBaseline_toBaselineOf="@id/data_type"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/data_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_text_size_data_percentage"
            android:textAppearance="?android:textAppearanceLarge"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="40.0%" />

        <TextView
            android:id="@+id/data_ugm3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/main_text_size_data_ugm3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="(10.0)" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>