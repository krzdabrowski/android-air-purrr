<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/layout_login_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="96dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fingerprint_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_fingerprint"
            android:contentDescription="@string/login_description_fingerprint_icon"
            android:padding="8dp"
            android:src="@drawable/round_fingerprint_black_36" />

        <TextView
            android:id="@+id/fingerprint_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/login_authenticate_with_your_fingerprint"
            android:textAppearance="?android:textAppearanceMedium" />

    </LinearLayout>
</layout>