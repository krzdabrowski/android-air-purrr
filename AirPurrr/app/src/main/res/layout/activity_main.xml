<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="onSwitchChange"
            type="android.widget.CompoundButton.OnCheckedChangeListener"/>

        <variable
            name="detectorData"
            type="com.example.trubul.airpurrr.model.DetectorModel"/>

        <variable
            name="apiData"
            type="com.example.trubul.airpurrr.model.ApiModel"/>

        <variable
            name="flagDetectorApi"
            type="Boolean"/>
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        style="@style/Main.Layout">

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/Main.Layout">

            <TextView
                android:id="@+id/text_manual_control"
                style="@style/Main.Switch.Text"
                android:text="@string/main_switch_manual"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/switch_manual"
                app:layout_constraintBottom_toTopOf="@id/cardView"
                app:layout_constraintHorizontal_chainStyle="spread_inside" />

            <Switch
                android:id="@+id/switch_manual"
                style="@style/Main.Switch.Button"
                android:onCheckedChanged="@{onSwitchChange}"
                app:layout_constraintBaseline_toBaselineOf="@id/text_manual_control"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/text_manual_control" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                style="@style/Main.CardView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_manual_control"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout style="@style/Main.DataContainer.LinearLayout">
                    <include
                        android:id="@+id/partial_main_data_pm25"
                        style="@style/Main.DataContainer.LinearView"
                        layout="@layout/partial_main_data"
                        app:type="@{@string/main_data_info_pm25}"
                        app:source="@{flagDetectorApi}"
                        app:data="@{flagDetectorApi ? apiData : detectorData}" />

                    <include
                        android:id="@+id/partial_main_data_pm10"
                        style="@style/Main.DataContainer.LinearView"
                        layout="@layout/partial_main_data"
                        app:type="@{@string/main_data_info_pm10}"
                        app:source="@{flagDetectorApi}"
                        app:data="@{flagDetectorApi ? apiData : detectorData}" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>